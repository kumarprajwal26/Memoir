<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".JournalEntryActivity"
    tools:showIn="@layout/activity_journal_entry">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/TodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:text="Date"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp" />

            <EditText
                android:id="@+id/EditTextJournalEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TodayDate"
                android:hint="Enter your journal here"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditTextJournalEntry"
                android:text="Cancel"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"/>
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditTextJournalEntry"
                android:layout_toRightOf="@id/buttonCancel"
                android:text="Save"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>